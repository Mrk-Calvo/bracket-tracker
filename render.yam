services:
  - type: web
    name: bracket-inventory-tracker
    env: python
    plan: free
    buildCommand: pip install -r requirements.txt
    startCommand: gunicorn --worker-class eventlet -w 1 wsgi:app
    envVars:
      - key: SECRET_KEY
        generateValue: true
      - key: SLACK_WEBHOOK_URL
        value: your-slack-webhook-url-here
    healthCheckPath: /
